<div class="form-container">
  <% if (title) { %>
  <h1><%= title %></h1>
  <% } else { res.redirect('/') } %> 

  <%# A message block%> 
  <% if (message && message.length > 0) { %>
  <div class="flash-message"><%= message %></div>
  <% } %>

  <%#Code block to display errors %> 
  <% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>

  <div>You are logged in</div>
</div>
