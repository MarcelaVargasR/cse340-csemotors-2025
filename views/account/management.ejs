<div class="form-container">
  <% if (title) { %>
  <h1><%= title %></h1>
  <% } else { res.redirect('/') } %> 

  <%# A message block%> 
  <% if (message && message.length > 0) { %>
  <div class="flash-message"><%= message %></div>
  <% } %>

  <%#Code block to display errors %> 
  <% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>

  <div class="account-container">
    <h2 class="account-title">Welcome <%= accountFirstName %></h2>
    <p>You are logged in</p>
    <p><a href="/account/update/<%= accountId %>" class="edit-account-link">Edit Account Information</a></p>
    <% if (accountType === "Employee" || accountType === "Admin") { %>
      <h3>Inventory Management</h3>
      <p><a href="/inv" title="Go to Inventory Management" class="edit-account-link">Manage Inventory</a></p>
    <% } %>
  </div>
</div>
