<div class="form-container">
  <% if (title) { %>
  <h1><%= title %></h1>
  <% } else { res.redirect('/') } %> 

  <%# A message block%> 
  <% if (message) { %>
    <div class="flash-message"><%= message %></div>
  <% } %>

  <%#Code block to display errors %> 
  <% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>

  <form action="/account/login" method="post" class="login-form">
    <label for="account_email">Email Address:</label>
    <input type="email" id="account_email" name="account_email" required />

    <label for="account_password">Password:</label>
    <input
      type="password"
      id="account_password"
      name="account_password"
      required
    />
    <span
      >Passwords must be minimum of 12 characters and include 1 capital letter,
      1 number and 1 special character.</span>
    <input type="submit" value="Login" />
  </form>
  <p class="signup-link">No account? <a href="/account/register">Sign-up</a></p>
</div>
